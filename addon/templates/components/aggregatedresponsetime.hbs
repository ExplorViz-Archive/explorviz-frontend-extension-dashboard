<!-- Dropdown Card Example -->
<div class="card shadow mb-4">
  <!-- Card Header - Dropdown -->
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Aggregated response time</h6>
    {{paused}}
    {{#if paused}}
      <div onclick={{action "refresh"}}>
        <i class="fas fa-pause-circle" onclick={{action "refresh"}}></i>
      </div>
    {{else}}
      <div onclick={{action "refresh"}}>
        <i class="fas fa-play-circle"></i>
      </div>
    {{/if}}

    <div class="dropdown no-arrow">
      <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
      </a>
      <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
        <div class="dropdown-header">Konfiguration:</div>
        <a class="dropdown-item">{{#link-to "widgetsettings" (query-params widget="aggregatedresponsetime" instanceID=this.elementId)}}Widget Settings{{/link-to}}</a>
        <a class="dropdown-item" href="#" onclick={{action "remove"}}>Remove</a>


      </div>
    </div>
  </div>
  <!-- Card Body -->
  <div class="card-body" style="overflow: auto; height: 600px;">
    <ul class="list-group">

      {{#each this.aggregatedresponsetimeinfo as |info index|}}

        <li class="list-group-item" data-toggle="collapse" data-target="#aggregatedresponsetimetableindex_{{index}}_{{info.timestampLandscape}}" aria-expanded="false"
          aria-controls="aggregatedresponsetimetableindex_{{index}}_{{info.timestampLandscape}}"><b>Landscape:</b>
          {{date info.timestampLandscape}} <b>Entrys:</b> {{info.entrys}}</li>
        {{aggregatedresponsetimetable class="collapse multi-collapse" id=(concat (concat (concat 'aggregatedresponsetimetableindex_' index) '_') info.timestampLandscape)}}
      {{/each}}


    </ul>
  </div>
</div>
